<h1>Inventory <%= @inventory.id %></h1>

<%= link_to 'Add Food', inventory_inventory_foods_path(@inventory) %>

<table>
  <thead>
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @inventory.inventory_foods.each do |inventory_food| %>
      <tr>
        <td><%= inventory_food.food.name %></td>
        <td><%= inventory_food.quantity %></td>
        <td><%= form_with(model: inventory_food, url: inventory_inventory_food_path(@inventory, inventory_food), method: :delete, local: true, data: { confirm: 'Are you sure you want to remove this item?' }) do |form| %>
            <%= form.submit 'Remove' %>
        <% end %>
        </td>
        </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'Back to Inventories', inventories_path %></p>
