<h1>Inventories</h1>

<%= link_to 'Add New Inventory', new_inventory_path %>

<% @inventories.each do |inventory| %>
  <div class="inventory-item">
    <div class="name-and-remove">
      <p><%= link_to "Inventory #{inventory.id}", inventory_path(inventory) %></p>
      <%= form_with(model: inventory, url: inventory_path(inventory), method: :delete, data: { confirm: 'Are you sure?' }) do |form| %>
        <%= form.submit 'Remove' %>
      <% end %>
    </div>
    <div class="inventory-description">
      <%= inventory.description %>
    </div>
  </div>
<% end %>
